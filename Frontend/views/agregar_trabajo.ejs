<% if(nuevo == true){ %>
  <%- include('test'); %>  
<body>
  <div class="container">
    <div class="title">Que trabajo deseas agregar?</div>
    <div class="content">
      <form action="/agregar_trabajos" method="post">
        <div class="user-details">
          <div class="input-box">
            <span class="details">Nombre del trabajo</span>
            <input type="text" placeholder="Nombre del trabajo" name="trabajoNombre" required>
          </div>
          <div class="input-box">
            <span class="details">Duración</span>
            <input type="text" placeholder="Duración" name="duracion" required>
          </div>
          <div class="input-box" style="width: 100%;">
            <span class="details">Correo electronico</span>
            <input type="text" placeholder="Email" name="email" required>
          </div>
          <div class="gender-details">
            <span class="details">Categoria</span>
            <div class="categoria">
              <div>
                <select name="categoria" id="">
                  <option value="Finanzas y Administracion">Finanzas y Administracion</option>
                  <option value="Ciencias Aplicadas y Relacionadas">Ciencias Aplicadas y Relacionadas</option>
                  <option value="Salud">Salud</option>
                  <option value="Ventas y Servicios">Ventas y Servicios</option>
                  <option value="Explotacion Primaria y Extractiva">Explotacion Primaria y Extractiva</option>
                  <option value="Operación de Equipos de Transporte">Operación de Equipos de Transporte</option>
                  <option value="Procesamiento de Fabricacion y Ensamble">Procesamiento de Fabricacion y Ensamble</option>
                  <option value="Vigilancia y Seguridad">Vigilancia y Seguridad</option>
                </select><br>
              </div>
              <div class="margtop">
              <span class="details">Descripción del trabajo</span>
              <textarea style="margin-top: 10px;" name="descripcion" id="" cols="90" rows="5"
                placeholder="Descripción" class="texto"></textarea>
              </div>
            </div>
        <hr>
        <hr>
        <div class="button centerbtn">
          <input type="submit" value="Enviar">
        </div>
      </form>
    </div>
  </div>
</body>
</html>
<% } %>

